@import "../../assets/styl/mixin.styl"
.travel-info
  position: fixed
  left 0
  top 0
  bottom 0
  right 0
  z-index 100
  background #f6f6f6
  .border-1px
    border-1px(#e5e5e5)
  &.animated
    animation-duration 0.4s
  .hd
    position fixed
    top 0
    left 0
    z-index 101
    background #0f88eb
    width 100%
    height 40px
    .closed
      position absolute
      left 0px
      top 0px
      line-height 40px
      color #fff
      .back
        vertical-align top
        display inline-block
        line-height 40px
        font-size 15px
      .icon
        display inline-block
        line-height 40px
        font-size 25px
        width 16px
    .title
      line-height 40px
      color #fff
      text-align center
  .ft
    display flex
    position fixed
    bottom 0
    left 0
    z-index 101
    background #0f88eb
    width 100%
    height 50px
    .button
      flex 1
      line-height 50px
      text-align center
      color #fff
      &.yes
        background #ccc
        color #888

  .in-box
    padding 40px 0 50px 0
    .item-avatar
      display flex
      padding 10px
      padding-bottom 10px
      background #fff
      .avatar-img
        flex 0,0,60px
        width 60px
        .img
          width 50px
          height 50px
          display block
          text-align center
          line-height 50px
          font-size 14
          color #fff
          background #EE7942
          border-radius 50%
      .avatar-state
        position relative
        flex 1
        .name
          line-height 25px
        .state
          line-height 25px
          font-size 14px
          &.success
            color #5cb85c
          &.waited
            color #f0ad4e
          &.refuse
            color #d9534f
    .item-info
      font-size 14px
      padding 10px
      padding-bottom 10px
      background #fff
      border-top 0.5px #e5e5e5 solid
      border-bottom 0.5px #e5e5e5 solid
      margin-bottom 10px
      .block
        display flex
        line-height 22px
        .lt
          flex 0,0,80px
          width 80px
          color #999
        .ls
          flex 1
          text-align left
    .item-approval
      margin-bottom 10px
      padding 20px 10px
      border-top 0.5px #e5e5e5 solid
      border-bottom 0.5px #e5e5e5 solid
      background #fff
      .approval
        .list
          display flex
          .title
            flex 1
            display flex
            .img
              position relative
              width 40px
              height 40px
              line-height 35px
              margin-left 8px
              text-align center
              border-radius 50%
              background #ccc
              font-size 12px
              color #fff
              overflow hidden
              &.ues
                background #5a5a5a
                line-height 40px
              &.ok
                background #5cb85c
              &.error
                background #d9534f
              &.lok
                background #e5e5e5
                color #888
                line-height 40px
              &.next
                background #f0ad4e
                color #fff
              &.default
                background #f0ad4e
                color #fff
              .state
                position absolute
                bottom 0
                left 0
                width 100%
                height 10px
                line-height 12px
                font-size 10px
                background rgba(255,255,255,0.3)
                .icon-cross,.icon-help
                  font-size 8px
          .text
            flex 0 0 85px
            width 85px
            padding-top 5px
            padding-left 15px
            font-size 14px
            text-align left
            .to
              &.success
                color #5cb85c
              &.waited
                color #f0ad4e
              &.refuse
                color #d9534f
            .timer
              padding-top 5px
              font-size 10px
              color #aaa
              text-align left
        .line
          height 30px
          margin-left 20px
          span
            position relative
            top 7px
            left 2px
            display block
            width 10px
            height 10px
            border-left 1px solid #aaa
            border-bottom 1px solid #aaa
            transform rotate(-45deg)
    .item-copy
      border-top 0.5px #e5e5e5 solid
      padding 20px 10px
      background #fff
      .title
        font-size 14px
        margin-bottom 15px
        span
          color #888
      .cc-content
        display flex
        .cc-name
          width 50px
          .img
            width 40px
            height 40px
            line-height 40px
            margin auto
            text-align center
            border-radius 50%
            font-size 12px
            background #7ec0ee
            color #fff
          .name
            line-height 25px
            text-align center
            font-size 14px
