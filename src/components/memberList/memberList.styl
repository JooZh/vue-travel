@import "../../assets/styl/mixin.styl"
.memberList
  position fixed
  left 0
  bottom 0
  width 100%
  height 100%
  background #fff
  z-index 99
  &.animated
    animation-duration: 0.4s
  .memberList-wrapper
    .member-title
      background #0f88eb
      line-height 40px
      color #fff
      font-size 16px
      text-align center
    .member-item
      position absolute
      left 0
      top 40px
      bottom 90px
      width 100%
      overflow hidden
      .item-department
        line-height 36px
        background #f5f5f5
        text-indent 12px
        font-size 14px
      .item-member
        padding 0 12px
        .member-wrapper
          display flex
          height 40px
          line-height 40px
          .name
            flex 0 0 120px
            font-size 14px
          .job
            flex 1
            font-size 12px
          .select
            flex 0 0 60px
            text-align center
        .border-1px
          border-1px(#e5e5e5)
    .member-footer
      position fixed
      bottom 0
      left 0
      width 100%
      height 90px
      background #f0f0f0
      .top-wrapper
        display flex
        .left
          flex 0 0 60px
          line-height 30px
          padding-left 12px
        .right
          flex 1
          padding 5px 0px 5px 0
          line-height 20px
          height 40px
          font-size 12px
          overflow hidden
          .selectNames
            .selectName
              display inline-block
              padding 0px 5px
              margin 0 5px 5px 0
              background #5bc0de
              color #fff
              border-radius 2px
          .noName
            font-size 16px
            color #999
      .bottom-wrapper
        display flex
        padding 0 5px
        a
          display block
          line-height 30px
          margin 5px
          color #fff
          text-align center
          border-radius 5px
        a.reset
          flex 1
          background #d9534f
        a.send
          flex 1
          background #0f88eb
        a.close
          flex 1
          background #0f88eb


