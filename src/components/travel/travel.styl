@import "../../assets/styl/mixin"
.travel
  .content-add
    text-align center
    font-size 14px
    line-height 35px
    color #0f88eb
    span
      font-size 12px
  .border-1px
    border-1px(#e5e5e5)
  .travel-wrapper
  // 公共的部分
    .items-wrapper
      .item-title
        background #f0f0f0
        font-size 12px
        line-height 14px
        padding 8px 0
        color #777
        span
          display inline-block
          width 100px
          text-align center
      .item-content
        .input
          display flex
          height 44px
          line-height 44px
          .title
            flex 0 0 80px
            width 80px
            text-align center
          .content
            flex 1
          .icon
            flex 0 0 20px
            padding 0 10px
            text-align center
            line-height 44px
            color #a6a6a6
            &.active
              color #0f88eb
            &.activeError
              color #ff0000
          &.textLeft
            .content
              text-align left
          &.textRight
            .content
              text-align right
        .text-area
          display flex
          padding 10px 0
          .title
            flex 0 0 80px
            width 80px
            padding-top 0px
            text-align center
          .content
            flex 1
            position relative
            .text
              display block
              width 100%
              min-height 80px
              background #fafafa
              font-size 12px
              padding-bottom 20px
              color #666
            .text-length
              position absolute
              bottom 5px
              right 5px
              font-size 12px
              color #ccc
          .icon
            flex 0 0 20px
            padding 0 10px
            text-align center
            color #a6a6a6
            &.active
              color #0f88eb
        .select
          .title
            display flex
            height 44px
            line-height 44px
            .in
              flex 0 0 80px
              text-align center
            .icon
              flex 1
              text-align right
              line-height 44px
              margin-right 10px
              color #a6a6a6
              &.active
                color #0f88eb
          .sp-wrapper
            font-size 0
            .sp-title
              display flex
              width 60px
              justify-content center
              align-items center
              font-size 18px
              background #e5e5e5
              text-align center
              span
                color #aaa
              .sp-title-add
                text-align center
                font-size 10px
                padding-top 8px
            .sp-content
              .sp-content-ti
                background #f5f5f5
                height 25px
                line-height 25px
                text-indent 15px
                color #999
                span.ti
                  font-size 10px
                span.icon-arrow-bold-down
                  font-size 12px
                  position relative
                  top 2px
              .sp-content-in
                display flex
                padding 10px
                .add-cl
                  flex 1
                .add-po
                  flex 1
                .sp-cross
                  padding 30px 2px 0 0
                  flex 0 0 30px
                  text-align right
                  span
                    color #a6a6a6
                    font-size 14px

          .member-wrapper
            padding 0 10px 15px 10px
            font-size 0
          .member
            display inline-block
            vertical-align top
            width 40px
            text-align center
            padding 10px 5px
            &.add-lc
              margin-right 10px
              background #f8f8f8
            &.member-f
              margin-right 15px
            .name
              margin 0 auto 8px auto
              background #7EC0EE
              font-size 11px
              width 40px
              height 40px
              line-height 40px
              border-radius 50%
              color #fff
              &.plus
                background #e5e5e5
              &.bg1
                background #EE7942
              &.bg2
                background #607B8B
              span
                font-size 18px
                line-height 40px
                color #a5a5a5
            .job
              font-size 10px
              color #666
          .next
            width 30px
            height 40px
            margin 0px
            background #ccc

        .notice
          background #f5f5f5
          font-size 10px
          padding 5px 0
          line-height 16px
          text-indent 15px
          color #999
          &.height
            height 80px
      .button
        margin 15px 8px
        background #0f88eb
        color #fff
        display block
        height 45px
        line-height 45px
        text-align center
        border-radius 10px
  .allInfo
    position fixed
    top 0
    left 0
    z-index 99
    width 100%
    height 100%
    background rgba(0, 0, 0, 0.8)
    font-size 12px
    padding 20px
    line-height 25px
    box-sizing border-box
    h2
      text-align center
      font-size 16px
      margin-bottom 20px
      color #fff
    .allInfo-content
      position absolute
      top 60px
      left 20px
      right 20px
      bottom 20px
      background rgb(255, 255, 255)
      border-radius 5px
      .list-box
        position absolute
        top 20px
        left 20px
        bottom 60px
        right 20px
        box-sizing border-box
        overflow hidden
        .list
          display flex
          padding 3px 0
          line-height 25px
          .list-title
            flex 0, 0, 70px
            width 70px
            text-indent 5px
            text-align right
          .list-text
            flex 1
            text-indent 10px
            color #888

    .sendBox
      position absolute
      bottom 0px
      left 20px
      right 20px
      display flex
      .button
        flex 1
        text-align center
        margin-bottom 20px
        display inline-block
        &.send-button
          margin-left 0
        &.back-button
          margin-right 0
          a
            margin-left 0.5px
            background #009a61
        a
          height 40px
          line-height 40px
          margin 0 auto
          display block
          //border-radius 5px
          background #0f88eb
          color #fff
